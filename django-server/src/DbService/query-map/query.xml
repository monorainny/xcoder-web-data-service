    <query id="insertMember" description="">
        <sql>
            INSERT INTO member
                (name, nickname, grade, job, phone, mail, cacaotalkid, ichatid)
            VALUES
                (?, ?, ?, ?, ?, ?, ?, ?)
        </sql>
        <parameter>
            <param id="name"/>
            <param id="nickname"/>
            <param id="grade"/>
            <param id="job"/>
            <param id="phone"/>
            <param id="mail"/>
            <param id="cacaotalkid"/>
            <param id="ichatid"/>
        </parameter>
    </query>
    
    <query id="updateMember" description="">
        <sql>
            UPDATE member
            SET 
                name = ?, 
                nickname = ?, 
                grade = ?, 
                job = ?, 
                phone = ?, 
                mail = ?, 
                cacaotalkid = ?, 
                ichatid = ?
            WHERE no = ?
        </sql>
        <parameter>
            <param id="name"/>
            <param id="nickname"/>
            <param id="grade"/>
            <param id="job"/>
            <param id="phone"/>
            <param id="mail"/>
            <param id="cacaotalkid"/>
            <param id="ichatid"/>
            <param id="no"/>
        </parameter>
    </query>
    
    <query id="deleteMember" description="">
        <sql>
            DELETE member
            WHERE no = ?
        </sql>
        <parameter>
            <param id="no"/>
        </parameter>
    </query>
