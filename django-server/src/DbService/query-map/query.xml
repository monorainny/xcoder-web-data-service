<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<data xmlns="data">
   	<query id="CreateTable" description="">
   	    <sql>
	   	    CREATE TABLE users (
	            username VARCHAR PRIMARY KEY,
	            password VARCHAR NOT NULL
	        )
        </sql>
   	</query>
   	<query id="InsertUser" description="">
   	    <sql>
	   	    INSERT INTO users (username, password) VALUES (?, ?)
        </sql>
        <parameter>
            <param id="username"/>
            <param id="password"/>
        </parameter>
   	</query>
   	<query id="SelectUser" description="">
   	    <sql>
	   	    SELECT username, password FROM users
        </sql>
   	</query>
    <query id="TableList" description="">
        <sql>
            SELECT name, type FROM sqlite_master WHERE type = 'table'
        </sql>
    </query>
    <query id="ImgList" description="">
        <sql>
            select num, imgname,ifnull(imgdate,'') as imgdate,photo,ifnull(photos.id,0) as photocheck from imginfo left outer join photos on imginfo.num =  photos.id 
        </sql>
    </query>
